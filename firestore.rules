rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user has a @navgurukul.org email
    function isNavgurukul() {
      return request.auth != null && request.auth.token.email.matches('.*@navgurukul\\.org$');
    }
    
    // Users: Authenticated users with authorized domain can read all profiles
    // Users can write their own profile, OR admins can write to manage roles
    match /users/{userId} {
      allow read: if isNavgurukul();
      allow write: if isNavgurukul() && (
        request.auth.uid == userId || // User can update their own profile
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['superAdmin', 'subAdmin'] // Admins can update others
      );
    }
    
    // Leaves: Authenticated users with authorized domain can read and write leave requests.
    match /leaves/{leaveId} {
      allow read, write: if isNavgurukul();
    }
    
    // Mail: For Firebase Email Extension
    match /mail/{mailId} {
      allow create: if isNavgurukul();
      allow read, delete: if false; // Only extension can read/delete
    }
  }
}
