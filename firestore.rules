rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users: Authenticated users can read all profiles (for simple role checking/admin views)
    // Users can write their own profile, OR admins can write to manage roles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        request.auth.uid == userId || // User can update their own profile
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['superAdmin', 'subAdmin'] // Admins can update others
      );
    }
    
    // Leaves: Authenticated users can read and write leave requests.
    match /leaves/{leaveId} {
      allow read, write: if request.auth != null;
    }
    
    // Mail: For Firebase Email Extension
    // Users can create email documents, extension will process and delete them
    match /mail/{mailId} {
      allow create: if request.auth != null;
      allow read, delete: if false; // Only extension can read/delete
    }
  }
}
