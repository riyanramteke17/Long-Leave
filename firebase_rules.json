{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "leaves": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": [
        "userId",
        "status",
        "appliedDate"
      ]
    }
  }
}